<Page x:Class="Lab5.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <StackPanel Background="{StaticResource BackgroundWindowsResource}">

        <TextBlock Margin="25,30,25,5" FontSize="20" TextAlignment="Center">
            Информационная подсистема ведения договоров клиентов
        </TextBlock>

        <TextBlock Margin="25,30,5,5">
            <Hyperlink NavigateUri="PagePerson.xaml">Клиенты</Hyperlink>
        </TextBlock>
        <TextBlock Margin="25,30,5,5">
            <Hyperlink NavigateUri="PageAgreement.xaml">Договора</Hyperlink>
        </TextBlock>
        <TextBlock Margin="25,30,5,5">
            <Hyperlink NavigateUri="PageStatusAgreement.xaml">Статусы договоров</Hyperlink>
        </TextBlock>
        <TextBlock Margin="25,30,5,5">
            <Hyperlink NavigateUri="PageTypeAgreement.xaml">Типы договоров</Hyperlink>
        </TextBlock>

        <Button Margin="25, 15" Width="60" HorizontalAlignment="Left"  Click="Button_Click">
            Выход
        </Button>

    </StackPanel>
</Page>
